{
  "name": "formex",
  "version": "1.0.1",
  "description": "Gerenciador de Orçamentos",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "build": {
    "appId": "com.dracster.formex",
    "productName": "Formex",
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName} Setup ${version}.${ext}",
      "publisherName": "Dracster Studio",
      "icon": "src/build/icon.ico",
      "asar": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerSidebar": "src/build/installerSidebar.bmp",
      "shortcutName": "Formex",
      "license": "LICENSE"
    }
  },
  "keywords": [
    "gerenciador",
    "orçamento",
    "finanças",
    "formex",
    "Dracster"
  ],
  "author": {
    "name": "Dracster Studio",
    "email": "dracsterstudio@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.9",
    "electron-builder": "^24.13.3"
  }
}
